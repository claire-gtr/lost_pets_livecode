<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for pet do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :species %>
        <%= f.input :species, collection: Pet::SPECIES %>
        <%= f.input :found_on %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
